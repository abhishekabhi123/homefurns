     <script>

        
         function addToCart(productId) {
             toastr.options = {
                 "closeButton": true,
                 "newestOnTop": false,
                 "progressBar": true,
                 "positionClass": "toast-bottom-center",
                 "preventDuplicates": false,
                 "onclick": null,
                 "showDuration": "300",
                 "hideDuration": "1000",
                 "timeOut": "5000",
                 "extendedTimeOut": "1000",
                 "showEasing": "swing",
                 "hideEasing": "linear",
                 "showMethod": "fadeIn",
                 "hideMethod": "fadeOut"
             }
             $.ajax({
                 url: `/addtocart/${productId}`,
                 data: {},
                 method: "POST",
                 success: function () {
                     toastr.success("Added to cart!");
                 }
             })
         }


         function addToWishlist(productId) {
                      const buttons=document.getElementById("bttn");
        buttons.classList.toggle("change");

             toastr.options = {
                 "closeButton": true,
                 "newestOnTop": false,
                 "progressBar": true,
                 "positionClass": "toast-bottom-center",
                 "preventDuplicates": false,
                 "onclick": null,
                 "showDuration": "300",
                 "hideDuration": "1000",
                 "timeOut": "5000",
                 "extendedTimeOut": "1000",
                 "showEasing": "swing",
                 "hideEasing": "linear",
                 "showMethod": "fadeIn",
                 "hideMethod": "fadeOut"
             }
             $.ajax({

                 url: "/addToWishlist",
                 data: {
                     id: productId
                 },
                 method: "post",
                 success: function (res) {
                    console.log(res)
                     if (res == "added"){

                     toastr.success("Removed from Wishlist!");
                     }
                     else{
                        toastr.success("Added to Wishlist!");
                        
                     }

                 }
             })
         }
           
     </script>