     <!-- Product section-->

     {{#product}}
     <section class="py-5">
         <div class="container px-4 px-lg-5 my-5">
             <div class="row gx-4 gx-lg-5 align-items-center">
                 <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" id="image"
                         src="/product-images/{{this._id}}.jpg" alt="..." /></div>
                 <div class="col-md-6">
                     <div class="small mb-1">SKU: BST-498</div>
                     <h1 class="display-5 fw-bolder">{{this.name}}</h1>
                     <div class="fs-5 mb-5">
                         {{#ifCond this.mrp '>' this.price }}
                         <div class="d-flex">
                             <span>${{this.price}}</span>
                             <span class="text-decoration-line-through ms-3">${{this.mrp}}.00</span>
                             {{!-- <p class="ms-3 mt-auto text-success fw-bold" style="margin-bottom: 0.3rem;">{{total_discount}}% off</p> --}}
                         </div>
                         {{else}}
                         <span>${{this.price}}</span>
                         {{/ifCond}}
                     </div>
                     <p class="lead">{{this.description}}</p>
                     <div class="d-flex">
                         <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1"
                             style="max-width: 3rem" />
                         <button class="btn btn-outline-dark flex-shrink-0" onclick="addToCart('{{this._id}}')"
                             type="button">
                             <i class="bi-cart-fill me-1"></i>
                             <span>Add to cart</span>
                         </button>
                         <button class="btn btn-outline-dark flex-shrink-0 ml-4" id="bttn" onclick="addToWishlist('{{this._id}}')"
                             type="button">
                             <i class="bi-cart-fill me-1"></i>
                             <span>Add to Wishlist</span>
                         </button>
                     </div>
                 </div>
             </div>
         </div>
     </section>
